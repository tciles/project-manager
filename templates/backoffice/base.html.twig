<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}


</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">PM</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {% set route_name = app.request.get('_route') %}

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {% if route_name matches '/^admin_project/' %}active{% endif %}"
                       aria-current="page"
                       href="{% if route_name matches '/^admin_project/' %}#{% else %}{{ path("admin_project_manage") }}{% endif %}">Projets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if route_name matches '/^admin_project_tag/' %}active{% endif %}"
                       aria-current="page"
                       href="{% if route_name matches '/^admin_tag/' %}#{% else %}{{ path("admin_tag_manage") }}{% endif %}">Tags</a>
                </li>
            </ul>
        </div>
    </div>

</nav>
{% block body %}{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
</body>
</html>
